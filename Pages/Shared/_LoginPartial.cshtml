@using Microsoft.AspNetCore.Identity
@using ASP_Razor_EF.models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    @* SignInManager.IsSignedIn(User)
        UserManager.GetUserName(User) *@
}


<ul class="navbar-nav">

    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text dark" asp-area="Identity" asp-page="/Account/Manage/Index">Hello @UserManager.GetUserName(User) </a>
        </li>

        <li class="nav-item">
            <a class="nav-link text dark" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }




</ul>